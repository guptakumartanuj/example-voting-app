pipeline{
    agent any
    tools{
    maven 'Maven 3.6.1'
    }
    stages{
        stage("build"){
            steps{
                echo "This is a stage first build.."
                dir("worker"){
                sh 'mvn compile'
                }
            }
        }
        stage("test"){
            steps{
                echo "This is a stage test .."
                dir("worker"){
                sh 'mvn clean test'
                }
            }
        }
        stage("package"){
            steps{
                echo "This is a stage package .."
                dir("worker"){
                sh 'mvn package -DskipTests'
                archiveArtifacts artifacts: '**/target/*.jar'
                }
            }
        }
    }
    
    post{
        always{
            echo "THis pipeline is completed .."
        }
    }
}
